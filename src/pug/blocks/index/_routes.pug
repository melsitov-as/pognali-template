                        h3.routes__item-country-title Таиланд
                        span.routes__item-text Джунгли зовут!
                        include ../../../assets/svg-icons/user-icon.svg
                        span.routes__item-users-count 18321
                        
            li.routes__item 
                .routes__item-img-container 
                    img.routes__item-img-mobile(src="/pognali-template/assets/mobile-france-bg.png", alt="Франция фото")
                    img.routes__item-img-tablet(src="/pognali-template/assets/tablet-france-bg.png", alt="Франция фото")  
                .routes__item-container
                    img.routes__item-flag(src="/pognali-template/assets/france-flag-tablet.png", alt="Флаг Франции")
