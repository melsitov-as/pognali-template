                .routes__item-img-container 
                    img.routes__item-img-mobile(src="/pognali-template/assets/mobile-czech-bg.png", alt="Чехия фото")
                    img.routes__item-img-tablet(src="/pognali-template/assets/tablet-czech-bg.png", alt="Чехия фото")  
                .routes__item-container
                    img.routes__item-flag(src="/pognali-template/assets/czech-flag-tablet.png", alt="Флаг Чехии")
